generator client {
  provider = "prisma-client-js"
}

// * 一开始使用 mysql 的，但是为了适配 vercel，白嫖免费的数据库，测试一下 postgresql 
// datasource db {
//   provider = "mysql"
//   url      = env("DATABASE_URL")
// }

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// * 数字手动同步到 config/constant/index.ts 文件中
model Blog {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  title       String  @db.VarChar(50) // * BLOG_TITLE_MAX_LENGTH 
  content     String  @db.Text
  isPublished Boolean @default(true)

  tags BlogTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  title       String  @db.VarChar(50) // * NOTE_TITLE_MAX_LENGTH
  content     String  @db.Text
  isPublished Boolean @default(true)

  tags NoteTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TagType {
  BLOG
  NOTE
}

model BlogTag {
  id      Int     @id @default(autoincrement())
  tagName String  @unique @db.VarChar(20) // * TAG_NAME_MAX_LENGTH
  tagType TagType @default(BLOG)

  blogs Blog[]
}

model NoteTag {
  id      Int     @id @default(autoincrement())
  tagName String  @unique @db.VarChar(20) // * TAG_NAME_MAX_LENGTH
  tagType TagType @default(NOTE)

  notes Note[]
}

model Echo {
  id          Int      @id @default(autoincrement())
  reference   String   @db.VarChar(20) // * ECHO_REFERENCE_MAX_LENGTH
  isPublished Boolean  @default(true)
  content     String   @db.VarChar(100) // * ECHO_CONTENT_MAX_LENGTH
  createdAt   DateTime @default(now())
}
